<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/cell_rly"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/halftrans_black">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:background="@drawable/dialog_bg"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >

        <LinearLayout
                android:id="@+id/t1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                >

            <TextView
                    android:id="@+id/show_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="对方相册已上锁，您是否要申请查看相册？"
                    android:textColor="@color/gray_81"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    >
            </TextView>
        </LinearLayout>

        <LinearLayout
                android:layout_below="@id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
            <Button
                    android:id="@+id/app_yes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/t1"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_btn_gold"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:text="申请查看"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    />

            <Button
                    android:id="@+id/app_no"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/t1"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_btn_gold"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:text=" 取 消 "
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    >
            </Button>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>